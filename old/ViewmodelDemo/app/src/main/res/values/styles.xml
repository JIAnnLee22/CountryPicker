<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- CustomRadiotheme -->
    <style name="CustomRadioTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radio_style</item>
    </style>
    <style name="CustomRadioThemeIdcard" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radio_style_idcard</item>
    </style>

    <style name="btn_upload">
        <item name="android:background">@drawable/radio_style</item>
    </style>
    <style name="date_dialog_style" >
        <item name="color">@color/buttonAndText</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dialogTitle">false</item>
    </style>
</resources>

